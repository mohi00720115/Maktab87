<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingFragment">


        <EditText
            android:id="@+id/editText_numberOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:ems="10"
            android:hint="نام بازیکن اول را انتخاب کنید"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText_numberTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="نام بازیکن دوم را انتخاب کنید"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/editText_numberOne"
            app:layout_constraintTop_toBottomOf="@+id/editText_numberOne" />

        <EditText
            android:id="@+id/editTextText_numberOfRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="تعداد ستون های بازی رو انتخاب کنید"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toStartOf="@+id/editText_numberTwo"
            app:layout_constraintTop_toBottomOf="@+id/editText_numberTwo" />


        <Button
            android:id="@+id/btn_setting_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="set Change"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>