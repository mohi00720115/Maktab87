<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020417"
    tools:context=".MainActivity">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_background"
                android:screenReaderFocusable="true">

            </ImageView>

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:hint="FullName"
                android:inputType="textFilter"
                android:textColor="#00ACC1"
                android:textColorHint="#00ACC1"
                app:backgroundTint="#FFEB3B" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_."
                android:fontFamily="sans-serif-medium"
                android:hint="UserName"
                android:inputType="textFilter"
                android:textColor="#00ACC1"
                android:textColorHint="#00ACC1"
                app:backgroundTint="#FFEB3B" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#00ACC1"
                android:textColorHint="#00ACC1"
                app:backgroundTint="#FFEB3B" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:hint="Password"
                android:inputType="numberPassword"
                android:textColor="#00ACC1"
                android:textColorHint="#00ACC1"
                app:backgroundTint="#FFEB3B" />

            <EditText
                android:id="@+id/etRePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:hint="Re-type Password"
                android:inputType="numberPassword"
                android:textColor="#00ACC1"
                android:textColorHint="#00ACC1"
                app:backgroundTint="#FFEB3B" />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:gravity="bottom|start"
                android:text="Gender"
                android:textColor="#FFEB3B"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textColor="#00ACC1" />

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textColor="#00ACC1" />

                </RadioGroup>


            </LinearLayout>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/style"
                android:text="Register"
                android:textAllCaps="false"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnShowInfo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/stylee"
                android:text="Show info"
                android:textAllCaps="false"
                app:backgroundTint="@null" />


            <LinearLayout
                android:id="@+id/linearShowInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tvFullName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="#FFEB3B"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#00ACC1">

                </ImageView>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="#FFEB3B"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#00ACC1" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="#FFEB3B"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#00ACC1" />

                <TextView
                    android:id="@+id/tvPassword"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="#FFEB3B"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#00ACC1" />

                <TextView
                    android:id="@+id/tvRePassword"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="#FFEB3B"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#00ACC1" />

                <Button
                    android:id="@+id/btnHideInfo"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/styleee"
                    android:text="Hide info"
                    android:textAllCaps="false"
                    android:textColor="#020417"
                    app:backgroundTint="#FFEB3B" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
